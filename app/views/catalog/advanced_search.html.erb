<% @page_title = "#{t('blacklight_advanced_search.form.title')} - #{application_name}" %>

<div class="<%= advanced_search_page_class %>" id="content" role="main">

    <h1 class="advanced page-header">
        <%= t('blacklight_advanced_search.form.title') %>
        <%= link_to t('blacklight_advanced_search.form.start_over'), @advanced_search_url, :class =>"btn btn-default pull-right advanced-search-start-over" %>
    </h1>

    <div class="row">

        <div class="<%= advanced_search_form_class %>">
            <%= render 'advanced/advanced_search_form' %>
        </div>
        <div class="<%= advanced_search_help_class %>">
            <%= render "advanced_search_help" %>
        </div>

    </div>

</div>
